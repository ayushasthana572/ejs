<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login/SignUP</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <!-- Login Section -->
        <div class="login-box"><div class="form-box">
            <header>
                <h1 id="title">Login</h1>
            </header>
            <form action="/login" method="post">
                <!-- <input type="text" placeholder="Name" id="nameField"> -->
                <% if(error) {%>
                    <span>! <%= error %></span>
                    <% } %>
                <% if(msg) {%>
                    <span style="color: green;"><%= msg %></span>
                    <% } %>
                <input type="email" id="email" name="email" placeholder="Email email address" required>
                <input type="password" id="password" name="password" placeholder="Enter password" required>
                <a href="">Forgot Password</a>
                <input type="submit" class ="loginBtn" value="Login">
                <p class="signup">Not a member? <a href="#" id="signupToggle">SignUp</a></p>
            </form>
        </div>
        </div>
        <!-- SIGN up section-->
        <div class="signup-box"><div class="form-box">
            <header>
                <h1 id="title">Sign Up</h1>
            </header>
            <form action="/signup" method="post">
                
                <input type="text" name="nameField" placeholder="Enter name" id="nameField" required>
                <input type="email" id="emailId" name="emailId" placeholder="Enter email address" required>
                <input type="password" id="pass" name="pass" placeholder="Enter password" required>
                <!-- <a href="">Forgot Password</a> -->
                <input type="submit" class ="signUpBtn" value="Signup">
                <p class="signup">Already a member? <a href="#" id="signinToggle">Login</a></p>
            </form>
        </div>
        </div>

    </div>
    <script src="script.js"></script>
</body>
</html>